; ENTRADA DE TECLADO - INPUT.INC


.CODE

; LEER TECLADO

LEER_TECLADO PROC
    MOV AH, 01H
    INT 16H
    JZ NO_TECLA
    
    MOV AH, 00H
    INT 16H
    
   
    CMP AL, 'w'
    JE ES_W
    CMP AL, 'W'
    JE ES_W
    
    CMP AL, 's'
    JE ES_S
    CMP AL, 'S'
    JE ES_S
    
    CMP AL, 'a'
    JE ES_A
    CMP AL, 'A'
    JE ES_A
    
    CMP AL, 'd'
    JE ES_D
    CMP AL, 'D'
    JE ES_D
    
    CMP AL, 27      ; ESC
    JE ES_ESC
    
    JMP NO_TECLA

ES_W:
    JMP MOVER_ARRIBA

ES_S:
    JMP MOVER_ABAJO

ES_A:
    JMP MOVER_IZQUIERDA

ES_D:
    JMP MOVER_DERECHA

ES_ESC:
    JMP SALIR_JUEGO

NO_TECLA:
    RET


; RUTINAS DE MOVIMIENTO

MOVER_ARRIBA:
    MOV DIRECCION, 2
    SUB JUGADOR_Y, 2
    CALL VERIFICAR_COLISION
    JNC MOVIMIENTO_OK
    ADD JUGADOR_Y, 2
MOVIMIENTO_OK:
    RET

MOVER_ABAJO:
    MOV DIRECCION, 3
    ADD JUGADOR_Y, 2
    CALL VERIFICAR_COLISION
    JNC MOVIMIENTO_OK2
    SUB JUGADOR_Y, 2
MOVIMIENTO_OK2:
    RET

MOVER_IZQUIERDA:
    MOV DIRECCION, 1
    SUB JUGADOR_X, 2
    CALL VERIFICAR_COLISION
    JNC MOVIMIENTO_OK3
    ADD JUGADOR_X, 2
MOVIMIENTO_OK3:
    RET

MOVER_DERECHA:
    MOV DIRECCION, 0
    ADD JUGADOR_X, 2
    CALL VERIFICAR_COLISION
    JNC MOVIMIENTO_OK4
    SUB JUGADOR_X, 2
MOVIMIENTO_OK4:
    RET

SALIR_JUEGO:
    MOV AX, 4C00H
    INT 21H

LEER_TECLADO ENDP