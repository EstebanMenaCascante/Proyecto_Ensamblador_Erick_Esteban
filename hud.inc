; HUD (HEADS-UP DISPLAY) - INTERFAZ DE USUARIO EN JUEGO

.DATA
    ; Sistema de puntuación
    PUNTUACION_HUD DW 0
    PUNTOS_MINERAL_HUD EQU 10
    PUNTOS_MADERA_HUD EQU 15
    PUNTOS_FRUTA_HUD EQU 20

.CODE

; DIBUJAR HUD COMPLETO (SIMPLIFICADO)

DIBUJAR_HUD_COMPLETO PROC
    PUSH AX
    PUSH BX
    PUSH CX
    PUSH DX
    
    ; Dibujar barra superior simple
    CALL DIBUJAR_BARRA_HUD_SIMPLE
    
    POP DX
    POP CX
    POP BX
    POP AX
    RET
DIBUJAR_HUD_COMPLETO ENDP


; DIBUJAR BARRA SUPERIOR DEL HUD (SIMPLIFICADO)

DIBUJAR_BARRA_HUD_SIMPLE PROC
    PUSH AX
    PUSH BX
    PUSH CX
    PUSH DX
    
    ; Dibujar línea superior simple (640x20 pixels)
    MOV DX, 0           ; Y inicial
    
FILA_BARRA_S:
    CMP DX, 20
    JAE FIN_BARRA_S
    
    MOV CX, 0
COLUMNA_BARRA_S:
    CMP CX, 640
    JAE FIN_FILA_BARRA_S
    
    MOV AL, 8           ; Color gris oscuro
    CALL ESCRIBIR_PIXEL
    
    INC CX
    JMP COLUMNA_BARRA_S
    
FIN_FILA_BARRA_S:
    INC DX
    JMP FILA_BARRA_S
    
FIN_BARRA_S:
    POP DX
    POP CX
    POP BX
    POP AX
    RET
DIBUJAR_BARRA_HUD_SIMPLE ENDP




; AGREGAR PUNTOS AL RECOLECTAR RECURSO
; BL = tipo de recurso (1=mineral, 2=madera, 3=fruta)

AGREGAR_PUNTOS_HUD PROC
    PUSH AX
    
    CMP BL, 1
    JE PUNTOS_MIN_ADD
    CMP BL, 2
    JE PUNTOS_MAD_ADD
    CMP BL, 3
    JE PUNTOS_FRU_ADD
    JMP FIN_AGREGAR_PTS
    
PUNTOS_MIN_ADD:
    MOV AX, PUNTUACION_HUD
    ADD AX, PUNTOS_MINERAL_HUD
    MOV PUNTUACION_HUD, AX
    JMP FIN_AGREGAR_PTS
    
PUNTOS_MAD_ADD:
    MOV AX, PUNTUACION_HUD
    ADD AX, PUNTOS_MADERA_HUD
    MOV PUNTUACION_HUD, AX
    JMP FIN_AGREGAR_PTS
    
PUNTOS_FRU_ADD:
    MOV AX, PUNTUACION_HUD
    ADD AX, PUNTOS_FRUTA_HUD
    MOV PUNTUACION_HUD, AX
    
FIN_AGREGAR_PTS:
    POP AX
    RET
AGREGAR_PUNTOS_HUD ENDP

